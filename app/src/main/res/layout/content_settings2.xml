<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".settings2"
    tools:showIn="@layout/app_bar_student_main"
    android:background="#e6f2ff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">




            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"

                tools:ignore="MissingConstraints">


                <Button
                    android:id="@+id/editProfile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="تعديل الملف الشخصي"
                    android:background="@drawable/buttonsh2"
                    android:textColor="#ffff"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@drawable/edit_40"
                    android:textSize="16dp"



                    />
                <Button
                    android:id="@+id/deleteProfile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="حذف الملف الشخصي"
                    android:background="@drawable/buttonsh2"
                    android:textColor="#ffff"
                    android:textAlignment="center"
                    android:layout_marginTop="9dp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/icons8trash_40"


                    />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editProfile2"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#f4d7d7"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="12dp"


                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"

                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/b1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:backgroundTint="#FFFDE7"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:layout_margin="4dp"
                                >
                                <TextView
                                    android:id="@+id/IndividualFN"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:hint="الاسم الأول"
                                    android:background="#ffff"
                                    android:layout_gravity="center_vertical"
                                    android:padding="4dp"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="الاسم الأول"
                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:padding="4dp"

                                    />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/b2"
                            android:layout_below="@id/b1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:backgroundTint="#FFFDE7"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:layout_margin="4dp"
                                >
                                <TextView
                                    android:id="@+id/IndividualLN"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:hint="الاسم الأخير"
                                    android:background="#ffff"
                                    android:layout_gravity="center_vertical"
                                    android:padding="4dp"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="الاسم الأخير"
                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:padding="4dp"

                                    />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/b3"
                            android:layout_below="@id/b2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:backgroundTint="#FFFDE7"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:layout_margin="4dp"
                                >
                                <TextView
                                    android:id="@+id/IndividualG"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:hint="الجنس"
                                    android:background="#ffff"
                                    android:layout_gravity="center_vertical"
                                    android:padding="4dp"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="الجنس"
                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:padding="4dp"

                                    />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/b4"
                            android:layout_below="@id/b3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:backgroundTint="#FFFDE7"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:layout_margin="4dp"
                                >
                                <TextView
                                    android:id="@+id/IndividualDob"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:hint="تاريخ الميلاد"
                                    android:background="#ffff"
                                    android:layout_gravity="center_vertical"
                                    android:padding="4dp"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="تاريخ الميلاد"
                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:padding="4dp"

                                    />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/b5"
                            android:layout_below="@id/b4"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:backgroundTint="#FFFDE7"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:layout_margin="4dp"
                                >
                                <TextView
                                    android:id="@+id/IndividualEma"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:hint="الايميل"
                                    android:background="#ffff"
                                    android:layout_gravity="center_vertical"
                                    android:padding="4dp"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="الايميل"
                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:padding="4dp"

                                    />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/b6"
                            android:layout_below="@id/b5"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:backgroundTint="#FFFDE7"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:layout_margin="4dp"
                                >
                                <TextView
                                    android:id="@+id/IndividualSu"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:hint="المواد"
                                    android:background="#ffff"
                                    android:layout_gravity="center_vertical"
                                    android:padding="4dp"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="المواد"
                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:padding="4dp"

                                    />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>




                    </RelativeLayout>




                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </LinearLayout></ScrollView>
</android.support.constraint.ConstraintLayout>
