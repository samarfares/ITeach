<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".settings"
    tools:showIn="@layout/app_bar_instructor_main"
    android:background="#e6f2ff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تعديل الملف الشخصي"
                android:layout_marginLeft="3dp"/>
            <Button
                android:id="@+id/deleteProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حذف الملف الشخصي"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorFN"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="الاسم الأول"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="الاسم الأول"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorLN"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="الاسم الأخير"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="الاسم الأخير"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorG"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="الجنس"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="الجنس"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorDob"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="تاريخ الميلاد"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="تاريخ الميلاد"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorEma"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="الايميل"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="الايميل"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorSu"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="المواد"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="المواد"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorPlace"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="مكان الدرس"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="مكان الدرس"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorPhone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="رقم التلفون"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="رقم التلفون"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorTMethod"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="طريقة التدريس"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="طريقة التدريس"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorPayment"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="طريقة الدفع"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="طريقة الدفع"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorPrice"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="السعر"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="السعر"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorYoe"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="سنوات الخبرة"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="سنوات الخبرة"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/InstructorLikes"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="المواد"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="الاعجابات"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>



    </LinearLayout>



</RelativeLayout>