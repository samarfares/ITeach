    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextPasswordInstructor" android:textSize="13dp" android:textColor="#000" android:textAlignment="center" android:layout_below="@id/v2" android:drawablePadding="12dp" android:drawableLeft="@drawable/ic_lock_black_24dp" android:layout_margin="15dp" android:textDirection="ltr" android:inputType="textPassword" android:hint="فضلاً أدخل كلمة مرور"/>

