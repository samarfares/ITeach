    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/lessonsPrice" android:textSize="13dp" android:textColor="#000" android:textAlignment="center" android:layout_below="@id/vv1" android:drawablePadding="12dp" android:layout_margin="15dp" android:textDirection="ltr" android:inputType="number" android:hint="فضلاً أدخل سعر الدرس"/>

