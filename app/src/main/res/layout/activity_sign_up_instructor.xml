</RelativeLayout>

</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_centerHorizontal="true" android:id="@+id/card_2" android:layout_below="@+id/card_1" android:layout_marginTop="20dp" android:backgroundTint="#FFFDE7">


    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:layout_margin="5dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textViewDOB" android:textStyle="bold" android:textSize="14dp" android:textAlignment="center" android:text="فضلاً اختر تاريخ ميلادك :" android:padding="5dp" android:layout_marginTop="9dp" android:layout_marginRight="9dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>

