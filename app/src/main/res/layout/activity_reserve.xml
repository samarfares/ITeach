<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reserve">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_choose_date_schedule_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_date"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                />

            <TextView
                android:id="@+id/textViewDateReserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="35sp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Choose from below slots if there is any : "/>

            <ListView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/listViewReserve"
                android:layout_width="match_parent"
                android:layout_height="280dp">
            </ListView>

            <Button
                android:id="@+id/button_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserve"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                />
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>