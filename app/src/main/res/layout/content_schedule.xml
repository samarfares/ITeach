<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".schedule"
    tools:showIn="@layout/app_bar_instructor_main">


    <ScrollView
        android:layout_marginTop="54dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_choose_date_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اختر التاريخ"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التاريخ"
                android:textSize="25sp"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/button_edit_spots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تعديل الأوقات المتاحة"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"/>
            <TextView
                android:id="@+id/noneTextSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="لا يوجد مواعيد متاحة في هذا اليوم !"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
            <ListView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/listViewSchedule"
                android:layout_width="match_parent"
                android:layout_height="280dp">
            </ListView>

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>