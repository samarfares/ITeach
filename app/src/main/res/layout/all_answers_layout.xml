<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e6f2ff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            app:cardElevation="12dp"
            android:backgroundTint="#1fabcb"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#1fabcb"
                >

                <ImageButton
                    android:id="@+id/options2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/option_wh"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="15dp"
                    android:layout_toEndOf="@+id/options2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#ffff"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#ffff"

                        >


                        <TextView

                            android:id="@+id/AnswerUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الاسم"
                            android:layout_marginLeft="10dp"
                            android:textColor="@android:color/holo_blue_light"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_marginTop="3dp"
                            android:textAlignment="center"
                            android:padding="4dp"

                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            />





                        <TextView

                            android:id="@+id/AnswerDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التاريخ"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="50dp"
                            android:padding="4dp"

                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_toStartOf="@+id/AnswerUserName"

                            />






                    </RelativeLayout>



                </android.support.v7.widget.CardView>

            </RelativeLayout>




        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#ffff"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#FFFDE7"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/e1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="6dp"
                    >

                    <TextView
                        android:id="@+id/AnswerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="right"
                        android:padding="3dp"
                        android:text="الاجابة"
                        android:textColor="@android:color/black"
                        android:textDirection="anyRtl"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="6dp"
                        />


                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#ccffff"
                    app:cardCornerRadius="12dp"
                    android:layout_below="@id/e1"
                    android:layout_centerHorizontal="true"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="#ccffff"

                        >
                        <ImageButton
                            android:id="@+id/likeButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/like_mate"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"
                            />


                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/likeButton"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="12dp"
                            app:cardElevation="14dp"
                            app:cardCornerRadius="10dp"

                            >
                            <TextView
                                android:id="@+id/likesNumber"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:text="0 إعجاب"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_margin="3dp"
                                android:textAlignment="center"
                                android:padding="4dp"
                                />

                        </android.support.v7.widget.CardView>




                    </RelativeLayout>



                </android.support.v7.widget.CardView>








            </RelativeLayout>



        </android.support.v7.widget.CardView>









    </LinearLayout>

</RelativeLayout>