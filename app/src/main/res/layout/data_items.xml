<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:backgroundTint="#e6f2ff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="#e6f2ff"
        android:orientation="vertical"

        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#ffff"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#ffff"
                >

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />


                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insName"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insDob"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />


                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insYOE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insGender"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />


                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insLikes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insYOE"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />


                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insSubjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insLikes"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insTmethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insSubjects"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insPmethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insTmethod"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insLessonPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insPmethod"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insLessonPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"

                    android:layout_below="@+id/insLessonPlace"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/insLessonPrice"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/insPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_below="@id/insEmail"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    />

            </RelativeLayout>



        </android.support.v7.widget.CardView>























    </LinearLayout>
</android.support.v7.widget.CardView>










