<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".blackboard"
    tools:showIn="@layout/app_bar_instructor_main">

    <Button
        android:id="@+id/askButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="60dp"
        android:textColor="#FCFFF0"
        android:background="@drawable/button"
        android:shadowColor="#A8254C"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="اسأل" />

    <Button
        android:id="@+id/myQuestionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/askButton"
        android:layout_centerHorizontal="true"
        android:textColor="#FCFFF0"
        android:background="@drawable/button"
        android:shadowColor="#A8254C"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="أسئلتي" />

    <Button
        android:id="@+id/filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/askButton"
        android:layout_marginEnd="16dp"
        android:text="فلترة"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"

        android:textColor="#FCFFF0"
        android:background="@drawable/button"
        android:shadowColor="#A8254C"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/allQuestionList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:scrollbars="vertical"/>


</RelativeLayout>